# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration (to be configured later)
# DATABASE_URL=

# Storage Configuration
STORAGE_TYPE=redis
# STORAGE_TYPE=memory  # Fallback to in-memory storage

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL_EXTEND_ON_READ=true

# TTL Configuration for temporary sites
SITE_TTL_HOURS=24

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Preview Configuration
PREVIEW_BASE_URL=http://localhost:3001/preview

# External API Configuration (for migration)
SITES_API_URL=http://localhost:3002
SITES_API_TOKEN=
SITES_API_TIMEOUT=5000

# Publishing Configuration
PUBLISH_DIR=./published
PUBLISH_BASE_URL=http://localhost:3001
CSS_MINIFY=true

# Frappe Service Configuration
FRAPPE_SERVICE_URL=http://localhost:8000
FRAPPE_ENABLED=false
FRAPPE_TIMEOUT_MS=5000
FRAPPE_RETRY_ATTEMPTS=3

